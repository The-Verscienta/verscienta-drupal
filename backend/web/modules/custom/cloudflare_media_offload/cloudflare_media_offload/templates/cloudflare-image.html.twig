{#
/**
 * @file
 * Template for Cloudflare image display.
 *
 * Variables:
 * - image_url: The Cloudflare image URL.
 * - alt: Alt text for the image.
 * - title: Title text for the image.
 * - attributes: HTML attributes for the image tag.
 * - variant: The Cloudflare variant being used.
 */
#}

<img src="{{ image_url }}"
     {% if alt %}alt="{{ alt }}"{% endif %}
     {% if title %}title="{{ title }}"{% endif %}
     {{ attributes }}
     data-cloudflare-variant="{{ variant }}"
     class="cloudflare-image{% if attributes.class %} {{ attributes.class }}{% endif %}" />