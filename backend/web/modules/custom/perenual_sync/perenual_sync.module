<?php

/**
 * @file
 * Primary module hooks for Perenual Sync module.
 */

declare(strict_types=1);

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function perenual_sync_help(string $route_name, RouteMatchInterface $route_match): ?string {
  switch ($route_name) {
    case 'help.page.perenual_sync':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Perenual Sync module integrates with the Perenual.com plant API to import and supplement herb data.') . '</p>';
      $output .= '<p>' . t('It can work standalone or as a fallback data source for the Trefle Sync module.') . '</p>';
      $output .= '<h3>' . t('Configuration') . '</h3>';
      $output .= '<p>' . t('Configure the module at <a href=":url">Configuration > Web services > Perenual Sync</a>.', [':url' => '/admin/config/services/perenual-sync']) . '</p>';
      return $output;

    default:
      return NULL;
  }
}
