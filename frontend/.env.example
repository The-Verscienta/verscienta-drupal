# =============================================================================
# Verscienta Health - Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# DRUPAL BACKEND
# -----------------------------------------------------------------------------
# The base URL of your Drupal backend
# For DDEV local development: https://backend.ddev.site
# For production: https://your-drupal-domain.com
NEXT_PUBLIC_DRUPAL_BASE_URL=https://backend.ddev.site

# OAuth 2.0 credentials from Drupal Simple OAuth module
# Get these from: /admin/config/people/simple_oauth
# The Client ID (UUID) of your OAuth consumer
DRUPAL_CLIENT_ID=e6ab6cee-b624-4103-8b06-ccff335ca6f7

# The Client Secret for your OAuth consumer
# Generate this in Drupal admin when creating/editing the consumer
DRUPAL_CLIENT_SECRET=your-oauth-client-secret-here

# -----------------------------------------------------------------------------
# GROK AI (xAI)
# -----------------------------------------------------------------------------
# Get your API key from: https://x.ai/api
# Used for symptom analysis and AI-powered recommendations
XAI_API_KEY=your-xai-api-key-here

# Optional: Grok model to use (default: grok-beta)
# XAI_MODEL=grok-beta

# -----------------------------------------------------------------------------
# CLOUDFLARE TURNSTILE (CAPTCHA)
# -----------------------------------------------------------------------------
# Get your keys from: https://dash.cloudflare.com/turnstile
# Used to protect forms from bots

# Public site key (safe to expose to browser)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key

# Secret key (server-side only)
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# -----------------------------------------------------------------------------
# ALGOLIA SEARCH (Optional)
# -----------------------------------------------------------------------------
# Get your keys from: https://dashboard.algolia.com
# Used for fast, typo-tolerant search

# Application ID
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id

# Search-only API key (safe for browser)
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-algolia-search-key

# Admin API key (server-side only, for indexing)
ALGOLIA_ADMIN_API_KEY=your-algolia-admin-key

# Index name
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=verscienta_health

# -----------------------------------------------------------------------------
# NEXT.JS CONFIGURATION
# -----------------------------------------------------------------------------
# The public URL of your frontend application
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Environment mode
NODE_ENV=development

# -----------------------------------------------------------------------------
# REDIS CACHING (Optional)
# -----------------------------------------------------------------------------
# For caching API responses and rate limiting
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# DEVELOPMENT OPTIONS
# -----------------------------------------------------------------------------
# Enable debug logging
# DEBUG=true

# Skip Turnstile validation in development (NOT for production!)
# SKIP_TURNSTILE=true
