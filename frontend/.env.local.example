# Drupal Backend
NEXT_PUBLIC_DRUPAL_BASE_URL=https://backend.ddev.site
DRUPAL_SITE_ID=default

# Preview Secret (generate a random string)
DRUPAL_PREVIEW_SECRET=your-preview-secret-here

# Plasmic Visual Page Builder
PLASMIC_PROJECT_ID=your-plasmic-project-id
PLASMIC_PROJECT_API_TOKEN=your-plasmic-api-token

# xAI API (Grok AI)
XAI_API_KEY=your-xai-api-key-here
XAI_API_URL=https://api.x.ai/v1

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Environment
NODE_ENV=development
